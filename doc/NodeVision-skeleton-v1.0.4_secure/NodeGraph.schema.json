{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/NodeGraph.schema.json",
  "title": "NodeGraph",
  "type": "object",
  "required": [
    "schemaVersion",
    "nodes",
    "edges"
  ],
  "properties": {
    "schemaVersion": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "project": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "settings": {
          "type": "object",
          "properties": {
            "preview": {
              "type": "object",
              "properties": {
                "maxFps": {
                  "type": "integer",
                  "minimum": 1,
                  "maximum": 60
                },
                "resolution": {
                  "type": "string",
                  "enum": [
                    "720p",
                    "1080p"
                  ]
                }
              },
              "required": [
                "maxFps",
                "resolution"
              ]
            }
          }
        }
      }
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "inputs"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "inputs": {
            "type": "object"
          },
          "outputs": {
            "type": "object"
          },
          "bypass": {
            "type": "boolean"
          },
          "position": {
            "type": "object",
            "properties": {
              "x": {
                "type": "number"
              },
              "y": {
                "type": "number"
              }
            }
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "from",
          "to"
        ],
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          }
        }
      }
    },
    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "path",
          "type"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "image",
              "video"
            ]
          }
        }
      }
    }
  }
}