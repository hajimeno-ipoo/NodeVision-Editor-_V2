{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "InspectConcatRequest",
  "type": "object",
  "required": [
    "clips"
  ],
  "properties": {
    "version": {
      "type": "string",
      "default": "1.0"
    },
    "clips": {
      "type": "array",
      "minItems": 2,
      "maxItems": 32,
      "items": {
        "type": "object",
        "required": [
          "path"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          }
        },
        "additionalProperties": false
      }
    },
    "options": {
      "type": "object",
      "properties": {
        "fpsTolerance": {
          "type": "number",
          "minimum": 0,
          "default": 0.01
        },
        "include": {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "enum": [
              "duration",
              "bitrate",
              "vcodec",
              "sar",
              "fps_rational",
              "pix_fmt"
            ]
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}