{
  "name": "nodevision-editor",
  "version": "0.0.1",
  "private": true,
  "description": "NodeVision Editor _V2 monorepo",
  "packageManager": "pnpm@9.12.0",
  "license": "MIT",
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "build:packages": "pnpm --filter '@nodevision/*' run build",
    "predev": "pnpm run build:packages",
    "build": "pnpm run -r build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:playwright": "playwright test",
    "playwright:install": "playwright install",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "dev": "pnpm --filter desktop-electron dev",
    "generate:media": "tsx scripts/generate-sample-media.ts",
    "check": "pnpm lint && pnpm test"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@playwright/test": "^1.56.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^20.16.5",
    "@vitest/coverage-v8": "^1.6.0",
    "ajv": "^8.17.1",
    "eslint": "^9.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-unused-imports": "^3.1.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.3.3",
    "tsx": "^4.16.2",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.1",
    "vitest": "^1.6.0"
  }
}
